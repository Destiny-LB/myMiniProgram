/* pages/arc/arc.wxss */
.arc_container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0rpx;
  box-sizing: border-box;
  font-size: large;
}

.title{
  margin: 5rpx 0rpx;
  padding: 5rpx 0rpx;
  text-align: center;
  font-family: "微软雅黑";
  font-size: 24px;
  font-weight:bold;
  color: #3377ee;
}

.abreast_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0rpx;
}

.get {
  margin: 10rpx 0rpx;
  border-bottom: 1px solid #666666;
  padding: 10rpx 0rpx;
  text-align: center;
  width: 250rpx;
}

.put {
  margin: 10rpx 10rpx;
  border: 1px solid #666666;
  padding: 10rpx 0rpx;
  text-align: center;
  height: 52rpx;
  width: 250rpx;
}

.text {
  margin: 10rpx 0rpx;
  padding: 10rpx 0rpx;
  text-align: center;
  font-size: 18px;
}

.button {
  background-color: #3377ee;
  color: #ffffff;
  text-align: center;
  font-size: 18px;
  width:fit-content;
  letter-spacing: 4px;
}