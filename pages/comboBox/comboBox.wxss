/* pages/comboBox/comboBox.wxss */
.comboBox_view{
  display: flex;
  z-index: 999;
 }

 .select_title{
  margin-right: 20rpx;
  margin-top: 4rpx ;
  color: #0099FF;
 }

 .select_view{
  display: inline;
  color: #0099FF;
 }
 
 .inputPlaceholder{
  min-width: 200rpx;
  height: 50rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border: 1px solid #0099FF;
  padding: 4rpx 4rpx 10rpx 10rpx;
  color: #0099FF;
  font-weight: 400;
  border-radius: 10rpx;
  position: relative;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  text-align: center;
 }

 .arrow{
  position: absolute;
  right: 10rpx;
  top: 8rpx;
 }

 .content{
  position: absolute;
  z-index: 999;
  min-width: 180rpx;
  max-height:300rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 10px 1px rgba(0, 153, 255, 0.4);
  border-radius: 0 0 5% 5%;
  padding: 20rpx;
  overflow-x: hidden;
  overflow-y: scroll;
  text-align: center;
 }

 .content>.inputPlaceholder{
  padding: 10rpx 10rpx;
 }
 
 .select_view .active{
  color: #FFFFFF;
  background: #6699FF;
 }