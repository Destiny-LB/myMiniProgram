/* pages/wheel/wheel.wxss */
.title{
  margin: 5rpx 0rpx;
  padding: 5rpx 0rpx;
  text-align: center;
  font-family: "微软雅黑";
  font-size: 24px;
  font-weight:bold;
  color: #2567ED;
}

.abreast_container {
  display: flex;
  flex-direction: row;
  width: 640rpx;
  align-items: center;
  justify-content: center;
  margin: 30rpx ;
}

.button {
  background: linear-gradient(to right, #103CE7, #64E9FF);
  color: #FFFFFF;
  text-align: center;
  font-size: 18px;
  width:fit-content;
  letter-spacing: 4px;
}
.button:hover {
  background: linear-gradient(to right, #205CE9, #74F9FF);
}

.hide{
  display: none;
}
.show{
  display: block;
}

