/* pages/scale/scale.wxss */
.scale_container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0rpx;
  box-sizing: border-box;
  font-size: large;
}

.title{
  margin: 5rpx 0rpx;
  padding: 5rpx 0rpx;
  text-align: center;
  font-family: "微软雅黑";
  font-size: 24px;
  font-weight:bold;
  color: #2567ED;
}

.conver_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0rpx;
  background-color: #00CCFF;
}

.conver_text {
  margin: 0rpx 10rpx;
  padding: 10rpx 0rpx;
  text-align: center;
  font-size: 18px;
  color: #FFFFFF;
}

.conver_num {
  margin: 0rpx 0rpx;
  border: 1px solid #00CCFF;
  padding: 10rpx 0rpx;
  text-align: center;
  height: 52rpx;
  width: 360rpx;
  background-color: #FFFFFF;
  white-space: nowrap;
  overflow-x: scroll;
  color: #6699FF;
}

.conver_num span {
  display: inline-block;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
}

.button {
  background: linear-gradient(to right, #103CE7, #64E9FF);
  color: #FFFFFF;
  text-align: center;
  font-size: 18px;
  width:fit-content;
  letter-spacing: 4px;
}
.button:hover {
  background: linear-gradient(to right, #205CE9, #74F9FF);
}