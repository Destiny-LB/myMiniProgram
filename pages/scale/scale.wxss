/* pages/scale/scale.wxss */
.arc_container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0rpx;
  box-sizing: border-box;
  font-size: large;
}

.title{
  margin: 5rpx 0rpx;
  padding: 5rpx 0rpx;
  text-align: center;
  font-family: "微软雅黑";
  font-size: 24px;
  font-weight:bold;
  color: #3377ee;
}

.conver_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0rpx;
  background-color: #c7c7c7;
}

.conver_text {
  margin: 0rpx 10rpx;
  padding: 10rpx 0rpx;
  text-align: center;
  font-size: 18px;
}

.conver_num {
  margin: 0rpx 0rpx;
  border: 1px solid #c7c7c7;
  padding: 10rpx 0rpx;
  text-align: center;
  height: 52rpx;
  width: 360rpx;
  background-color: #ffffff;
  white-space: nowrap;
  overflow-x: scroll;
}

.conver_num span {
  display: inline-block;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
}

.button {
  background-color: #3377ee;
  color: #ffffff;
  text-align: center;
  font-size: 18px;
  width:fit-content;
  letter-spacing: 4px;
}